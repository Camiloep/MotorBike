@model MotorBike.Models.Categorium

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Detalles de la categoria: @Model.NombreCategoria</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCategoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCategoria)
        </dd>
    </dl>
</div>
<div class="mt-2">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.IdCategoria" class="btn btn-primary">Editar</a>
    }
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</div>