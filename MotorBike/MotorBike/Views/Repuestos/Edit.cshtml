@model MotorBike.Models.Repuesto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Repuesto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRepuesto" />
            <div class="form-group">
                <label asp-for="FkCategoria" class="control-label"></label>
                <select asp-for="FkCategoria" class="form-control" asp-items="ViewBag.FkCategoria"></select>
                <span asp-validation-for="FkCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreRepuesto" class="control-label"></label>
                <input asp-for="NombreRepuesto" class="form-control" />
                <span asp-validation-for="NombreRepuesto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
