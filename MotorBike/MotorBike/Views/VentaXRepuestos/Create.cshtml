@model MotorBike.Models.VentaXRepuesto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Crear Venta por Repuesto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FkCategoria" class="control-label"></label>
                <select asp-for="FkCategoria" class ="form-control" asp-items="ViewBag.FkCategoria"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkRepuesto" class="control-label"></label>
                <select asp-for="FkRepuesto" class ="form-control" asp-items="ViewBag.FkRepuesto"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkMecanico" class="control-label"></label>
                <select asp-for="FkMecanico" class ="form-control" asp-items="ViewBag.FkMecanico"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkServicio" class="control-label"></label>
                <select asp-for="FkServicio" class ="form-control" asp-items="ViewBag.FkServicio"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkCliente" class="control-label"></label>
                <select asp-for="FkCliente" class ="form-control" asp-items="ViewBag.FkCliente"></select>
            </div>
            
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioUnitario" class="control-label"></label>
                <input asp-for="PrecioUnitario" class="form-control" />
                <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subtotal" class="control-label"></label>
                <input asp-for="Subtotal" class="form-control" />
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioManoObra" class="control-label"></label>
                <input asp-for="PrecioManoObra" class="form-control" />
                <span asp-validation-for="PrecioManoObra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioFinal" class="control-label"></label>
                <input asp-for="PrecioFinal" class="form-control" />
                <span asp-validation-for="PrecioFinal" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
