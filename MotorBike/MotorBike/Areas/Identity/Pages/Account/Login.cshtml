@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="shadow p-0 mb-5 bg-white rounded card m-0 p-0">
            <div class="card-header bg-dark text-light">
                <h1 class="text-center">Iniciar Sesión</h1>
            </div>
            <div class="col-md-12">
                <section class="card-body m-2">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating m-1">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating m-1">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox m-1">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@ ¿Recuérdame?
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary m-1">Iniciar Sesión</button>
                        </div>
                        <div class="text-center">
                            <p>
                                ¿Aun no estas registrado?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">¡Registrate!</a>
                            </p>
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación del Correo</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
